<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.HomeFragment"
    android:padding="8dp"
    android:background="@color/color_white">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/textViewGameSearch"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="4dp"
                    android:background="@drawable/reg_edittext_style"
                    android:ems="10"
                    android:textSize="15dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            </LinearLayout>

            <Button
                android:id="@+id/btnGameSearch"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/btn_cuenta2"
                android:gravity="center"
                android:text="GO"
                android:textColor="@android:color/black" />

        </LinearLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/textViewPopulares"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="Trending"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textColor="@color/color_barra"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerview_id_populares"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                    </androidx.recyclerview.widget.RecyclerView>

                <Button
                    android:id="@+id/btnpopulares"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:background="@drawable/btn_cuenta2"
                    android:text="@string/watch_more"
                    android:textColor="@android:color/black"
                    android:layout_gravity="center"
                    android:layout_marginBottom="30dp"
                    android:layout_marginTop="10dp"/>

            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textViewPc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="PC Games"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textStyle="bold"
                android:textColor="@color/color_barra"
                android:textSize="20dp"/>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerview_id_pc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

            </androidx.recyclerview.widget.RecyclerView>

            <Button
                android:id="@+id/btnpc"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:background="@drawable/btn_cuenta2"
                android:text="@string/watch_more"
                android:textColor="@android:color/black"
                android:layout_marginBottom="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textViewXboxOne"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/xbox_one_games"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textStyle="bold"
                android:textColor="@color/color_barra"
                android:textSize="20dp"/>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerview_id_Xbox"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
            </androidx.recyclerview.widget.RecyclerView>
            <Button
                android:id="@+id/btnxbox"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:background="@drawable/btn_cuenta2"
                android:text="@string/watch_more"
                android:textColor="@android:color/black"
                android:layout_marginBottom="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textViewPs4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/ps4_games"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textStyle="bold"
                android:textColor="@color/color_barra"
                android:textSize="20dp"/>



            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerview_id_Ps4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

            </androidx.recyclerview.widget.RecyclerView>

            <Button
                android:id="@+id/btnps4"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:background="@drawable/btn_cuenta2"
                android:text="@string/watch_more"
                android:textColor="@android:color/black"
                android:layout_marginBottom="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textViewSwitch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/nintendo_switch_games"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textStyle="bold"
                android:textColor="@color/color_barra"
                android:textSize="20dp"/>



            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerview_id_Switch"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

            </androidx.recyclerview.widget.RecyclerView>

            <Button
                android:id="@+id/btnswitch"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:background="@drawable/btn_cuenta2"
                android:text="@string/watch_more"
                android:textColor="@android:color/black"
                android:layout_marginBottom="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textViewAndroid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/android_games"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textStyle="bold"
                android:textColor="@color/color_barra"
                android:textSize="20dp"/>



            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerview_id_Android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
            </androidx.recyclerview.widget.RecyclerView>

            <Button
                android:id="@+id/btnandroid"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:background="@drawable/btn_cuenta2"
                android:layout_marginBottom="30dp"
                android:text="@string/watch_more"
                android:textColor="@android:color/black"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textViewIos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="IOS Games"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textStyle="bold"
                android:textColor="@color/color_barra"
                android:textSize="20dp"/>



            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerview_id_Ios"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
            </androidx.recyclerview.widget.RecyclerView>
            <Button
                android:id="@+id/btnios"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:background="@drawable/btn_cuenta2"
                android:layout_marginBottom="30dp"
                android:text="@string/watch_more"
                android:textColor="@android:color/black"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"/>

        </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</FrameLayout>